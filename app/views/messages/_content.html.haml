.content
  %p.pull-right
    =msg.created_at.to_date
  %p
    =msg.body
  %p.pull-right
    - if msg.user.name
      =msg.user.name
    - else
      =msg.user.email
  - if msg.user == current_user
    %p
      =link_to "Borrar", msg, method: :delete, data: {confirm: "Â¿Seguro que deseas borrarlo?"}
